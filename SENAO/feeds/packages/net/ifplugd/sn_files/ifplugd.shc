. /etc/functions.sh
SERVICE_DAEMONIZE=1
. /lib/functions.sh
. /lib/functions/service.sh


start() {
    config_load 'network'
        local lan1_interface=$(uci get /rom/etc/config/network.lan.ifname | awk '{print $1}' )
        service_start /usr/sbin/ifplugd -p -I -d0 -i "$lan1_interface"
}

stop() {
    service_stop /usr/sbin/ifplugd
}

case "$1" in
        start) start;;
        stop) stop;;
esac
