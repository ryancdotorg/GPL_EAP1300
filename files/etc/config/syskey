config cfg 'bridge_nf_call_iptable'
    option action 'echo $value > /proc/sys/net/bridge/bridge-nf-call-iptables; echo $value > /proc/sys/net/bridge/bridge-nf-call-ip6tables;'
    option default '0'

config cfg 'bridge_nf_filter_vlan_tagged'
    option action 'echo $value > /proc/sys/net/bridge/bridge-nf-filter-vlan-tagged;'
    option default '0'

config cfg 'ebtables'
    option default '0'

config cfg 'dnsmasq_restart'
    option default '0'
